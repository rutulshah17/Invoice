<% include ../partials/header.ejs %>

<main class="container">

    <h1><%= title %></h1>

    <form method="post">
        <fieldset>
            <legend></legend>
            <div class="form-group">
                <label for="nameOfClient" class="col-sm-2 control-label">Name Of Client:</label>
                <input name="nameOfClient" id="nameOfClient" required/>
            </div>
            <div class="form-group">
                <label for="amount" class="col-sm-2 control-label">Amount:</label>
                <input type="number" min="100" max="2000" name="amount" id="amount" required/>
            </div>
            <div class="form-group">
                <label for="dateFrom" class="col-sm-2 control-label">Date From:</label>
                <input name="dateFrom" id="dateFrom" type="date" required/>
            </div>
            <div class="form-group">
                <label for="dateTo" class="col-sm-2 control-label">Date To :</label>
                <input name="dateTo" id="dateTo" value="" type="date" required/>
            </div>
            <button id="save" class="btn btn-success col-sm-offset-2">Save</button>

        </fieldset>
    </form>

</main>

<script>
    document.getElementById('dateTo').valueAsDate = new Date();
</script>

<% include ../partials/footer.ejs %>